<div>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "image" %}
                <div>
                    {{ block.settings.image_target | json }} <!-- Debugging -->
                    {% if block.settings.image_target != blank %}
                        <img src="{{ block.settings.image_target | image_url }}">
                    {% else %}
                        <p>No image selected</p>
                    {% endif %}
                </div>
            {% when "text" %}
                <h2>{{ block.settings.text }}</h2>
        {% endcase %}
    {% endfor %}
</div>

{% schema %}
{
  "name": "my-img",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_target",
          "label": "Image"
        }
      ]
    },
    {
      "type": "text",
      "name": "text block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "my-img"
    }
  ]
}
{% endschema %}
